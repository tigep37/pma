<% include ../partials/header %>

<div class="container form-container">
    <div class="row">
        <div class="col-8 m-auto">
            <h3>Edit Profile: <%= user.firstname + ' ' + user.lastname %> (<%= user.username %>)</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-8 m-auto">
            <form action="/user/<%= user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="firstname">First Name</label>
                    <input class="form-control" type="text" value="<%= user.firstname %>" name="user[firstname]">
                </div>
                <div class="form-group">
                    <label for="lastname">Last Name</label>
                    <input class="form-control" type="text" value="<%= user.lastname %>" name="user[lastname]">
                </div>
                <div class="form-group">
                    <label for="image">Phone Number</label>
                    <input class="form-control" type="text" value="<%= user.phone %>" name="user[phone]">
                </div>
                <div class="form-group">
                    <label for="price">Email Address</label>
                    <input class="form-control" type="email" value="<%= user.email %>" name="user[email]">
                </div>
                <div class="form-group">
                    <button class="btn btn-secondary">Submit</button>
                    <a class="btn btn-outline-secondary" href="/user/<%= user.id %>">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>