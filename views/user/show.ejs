<% include ../partials/header %>

    <!-- Begin profile-->
    <div class="container form-container">
        <div class="row">
            <div class="col-8 m-auto">
                <h3>View Profile: <%= user.firstname + ' ' + user.lastname %> (<%= user.username %>)</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-8 m-auto">
                <div class="form-group">
                    <label for="firstname">Name</label>
                    <p class="profile"><%= user.firstname + ' ' + user.lastname %></p>
                </div>
                <div class="form-group">
                    <label for="image">Phone Number</label>
                    <p class="profile"><%= user.phone %></p>
                </div>
                <div class="form-group">
                    <label for="price">Email Address</label>
                    <p class="profile"><%= user.email %></p>
                </div>
                <div class="form-group">
                    <a class="btn btn-secondary" href="/user/<%= user.id %>/edit">Edit Profile</a>
                    <a class="btn btn-outline-secondary" href="/">Cancel</a>
                </div>
            </div>
        </div>
    </div>


<% include ../partials/footer %>